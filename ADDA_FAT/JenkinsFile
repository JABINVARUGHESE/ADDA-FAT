pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Get the latest code from the remote GitHub repository
                git 'https://github.com/JABINVARUGHESE/ADDA-FAT.git'
            }
        }

        stage('Build') {
            steps {
                // Build the Maven project
                bat 'start mvn clean install'
            }
        }

        stage('Build Docker Image') {
            steps {
                // Build Docker image
                bat 'start docker build -t your-docker-image-name .'
            }
        }

        stage('Push to Docker Repository') {
            steps {
                // Push Docker image to the central Docker repository
                withCredentials([usernamePassword(credentialsId: 'JABINMIC0051', passwordVariable: '6e2c6ec5-6c8e-4220-8be7-64c9a26f2250', usernameVariable: 'JABINVARUGHESE')]) {
                    sh "docker login -u ${jabinvarughese} -p ${Jabin11/12}"
                    sh 'docker push your-docker-image-name'
                }
            }
        }

        stage('Error Handling') {
            steps {
                catchError(buildResult: 'FAILURE', stageResult: 'FAILURE') {
                    // This stage will only execute if any of the previous stages fail
                    error 'There was a failure in the pipeline!'
                }
            }
        }
    }

    post {
        always {
            // Clean up (optional)
            deleteDir()
        }
    }
}